doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-fomulario   
            h1 Incia Sesión en UpTask 

            if error
                p.alerta.error= error 

            if locals.mensajes
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error


            form#formulario.caja.caja-login(method="POST" action="/iniciar-sesion")
                .campo  
                    label(for="email") Email 
                    input(type="email" name = "email" placeholder="Tu Email" required value= email)
                .campo
                    label(for="email") Password
                    input(type="password" name = "password" placeholder="Tu Pasword" required value= password)
                .campo.enviar
                    input.boton(type="submit" value = "Iniciar Sesión")
                .campo.acciones 
                    a(href="/crear-cuenta") ¿Aún no tienes cuenta? Crea una gratis

                    a(href="/reestablecer") ¿Olvidaste tu Contraña?