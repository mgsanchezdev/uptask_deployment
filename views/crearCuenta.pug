doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-fomulario   
            h1 Crea tu cuenta en UpTask 

            if locals.errores
                .alertas 
                    each categoria in Object.keys(locals.message)
                        each error in errores[categoria]
                            .alerta(class=`${categoria}`)
                                p= error
                each error in errores
                    p.error.alerta= error.message

            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
                .campo  
                    label(for="email") Email 
                    input(type="email" name = "email" placeholder="Tu Email" required)
                .campo
                    label(for="email") Password
                    input(type="password" name = "password" placeholder="Tu Pasword" required)
                .campo.enviar
                    input.boton(type="submit" value = "Crear Cuenta")
                .campo 
                    a(href="/iniciar-sesion") Volver a Iniciar Sesi√≥n
        script(src="/dist/bundle.js")