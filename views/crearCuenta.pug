doctype html
html(lang="en")
    head
        include partials/header
    body.login
        .contenedor-fomulario   
            h1 Crea tu cuenta en UpTask 


            if locals.mensajes
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error

            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
                .campo  
                    label(for="email") Email 
                    input(type="email" name = "email" placeholder="Tu Email" required value= email)
                .campo
                    label(for="email") Password
                    input(type="password" name = "password" placeholder="Tu Pasword" required value=password)
                .campo.enviar
                    input.boton(type="submit" value = "Crear Cuenta")
                .campo 
                    a(href="/iniciar-sesion") Volver a Iniciar Sesi√≥n
        script(src="/dist/bundle.js")